<div class="container">
  <div class="row mt-4">
    <% @artistas.each do  |artista| %>
      <div class="col-12 col-md-3 text-center">
        <div class="card mt-4 mb-4">
          <img src="<%= artista.image_url %>" class="card-img-top img-thumbnail" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= artista.name %></h5>
            <%= link_to 'Ver mas', artist_path(artista), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
